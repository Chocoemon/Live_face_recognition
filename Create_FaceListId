#1. Make string related with KEY, ENDPOINT
# 이건 건들지 마시오!!!
KEY = os.environ['FACE_SUBSCRIPTION_KEY']
ENDPOINT = os.environ['FACE_ENDPOINT']
face_client = FaceClient(ENDPOINT, CognitiveServicesCredentials(KEY))

face_client.face_list.create(face_list_id='test_list', name = 'test', recognition_model= 'recognition_03')
single_face_image_path = "C:/Users/CNH/PycharmProjects/untitled1/images/123.jpg"
